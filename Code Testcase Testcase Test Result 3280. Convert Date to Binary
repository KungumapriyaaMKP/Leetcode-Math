Approach :
-> substring and seperate the yr , month and date (from string to int)
-> convert into binary values by bitset (int to string)
-> now to avoid leading zeroes use substr(a.find('1')
-> append all and return 

class Solution {
public:
    string convertDateToBinary(string date) {
        int year = stoi(date.substr(0,4));
        int month = stoi(date.substr(5,2));
        int day = stoi(date.substr(8,2));

        string bi_yr = bitset<20>(year).to_string();
        bi_yr = bi_yr.substr(bi_yr.find('1'));

        string bi_mth = bitset<20>(month).to_string();
        bi_mth = bi_mth.substr(bi_mth.find('1'));

        string bi_day = bitset<20>(day).to_string();
        bi_day = bi_day.substr(bi_day.find('1'));

            return bi_yr + "-" + bi_mth + "-"+ bi_day;

    }
};
