// User function template for C++

class Solution {
  public:
    int isdivisible7(string num) {
        // complete the function here
        int res = 0;
        for(int i=0; i<num.size();i++)
        {
            res = (res*10 + (num[i] - '0'))%7; // Using the modulo property, the final remainder is the same as computing the whole number first and then % 7.
        }
        if(res==0) return 1;
        else return 0;
    }
};
